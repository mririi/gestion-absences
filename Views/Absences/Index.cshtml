@model IEnumerable<gestionabscence.Models.Absences>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Hours
            </th>
            <th>
                Date
            </th>
            <th>
                Student
            </th>
            <th>
                Subject
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoursNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AbsenceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AbsenceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AbsenceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
